# Environment Selection
ENVIRONMENT=development  # Options: development, production, test

# System Settings
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
CONFIG_DIR=config  # Directory containing configuration files
EMERGENCY_STATE_FILE=emergency_state.json  # Emergency state persistence file

# Trading Settings
PAPER_TRADING=true  # Set to false for live trading (production only)
MAX_RECONNECT_ATTEMPTS=5  # WebSocket reconnection attempts
WEBSOCKET_TIMEOUT=30  # WebSocket timeout in seconds

# Health Monitoring
HEALTH_CHECK_INTERVAL=60  # Health check interval in seconds
MAX_LATENCY_MS=1000  # Maximum acceptable latency
ERROR_THRESHOLD=0.05  # Error rate threshold (5%)

# Risk Management
EMERGENCY_SHUTDOWN_ENABLED=true  # Enable emergency shutdown feature
DAILY_LOSS_LIMIT_OVERRIDE=0.02  # Override config file value if missing

# Note: API credentials should be stored in config/cdp_api_key.json, not here
# See docs/configuration_management.md for detailed setup instructions